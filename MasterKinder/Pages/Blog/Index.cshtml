@page
@model IndexModel
@{
    ViewData["Title"] = "Blog";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/blog.css">
</head>
<body>
    <div class="container">
        <header class="blog-header">
            <h1>@ViewData["Title"]</h1>
        </header>

        <section class="intro">
            <p>Welcome to the blog! Here you will find the latest posts and updates.</p>
        </section>

        <section class="posts">
            <article class="post">
                <h2>First Blog Post</h2>
                <p>Published on January 1, 2024</p>
                <p>This is a summary of the first blog post. Click to read more...</p>
            </article>
            <article class="post">
                <h2>Second Blog Post</h2>
                <p>Published on February 1, 2024</p>
                <p>This is a summary of the second blog post. Click to read more...</p>
            </article>
            <!-- Add more blog posts here -->
        </section>

        <footer class="blog-footer">
            <p>&copy; 2024 Your Blog Name</p>
        </footer>
    </div>
</body>
</html>
