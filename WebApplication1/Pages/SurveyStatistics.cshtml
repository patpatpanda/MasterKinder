@page
@model MasterKinder.Pages.SurveyStatisticsModel

<h2>Statistik för Nöjdhet</h2>

<form method="get">
    <div>
        <label for="forskoleverksamhet">Förskoleverksamhet:</label>
        <input type="text" id="forskoleverksamhet" name="forskoleverksamhet" value="@Model.Forskoleverksamhet" />
    </div>
    <div>
        <label for="fragetext">Frågetext:</label>
        <input type="text" id="fragetext" name="fragetext" value="@Model.Fragetext" />
    </div>
    <button type="submit">Hämta Statistik</button>
</form>

@if (Model.AntalNöjdaSvar > 0)
{
    <h3>Antal nöjda svar: @Model.AntalNöjdaSvar</h3>
}
